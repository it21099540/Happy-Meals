<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            android:id="@+id/categoryImage"/>


        <TextView
            android:id="@+id/txtViewCategoryID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category ID : "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"
            android:layout_toRightOf="@+id/categoryImage"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/txtCategoryID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"
            android:layout_toRightOf="@+id/txtViewCategoryID"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/txtViewCategoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/categoryImage"
            android:layout_below="@+id/txtViewCategoryID"
            android:text="Category Title : "
            android:textColor="@color/dark_gray"
            android:textSize="24dp"
             />

        <TextView
            android:id="@+id/txtCategoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txtViewCategoryTitle"
            android:layout_below="@+id/txtViewCategoryID"
            android:text=""
            android:textColor="@color/dark_gray"
            android:textSize="24dp"
            />

        <Button
            android:id="@+id/btncategoryUpdate"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/categoryImage"
            android:layout_below="@+id/txtCategoryTitle"
            android:layout_marginLeft="10dp"
            android:text="Update"
            android:textAllCaps="false"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btncategoryDelete"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btncategoryUpdate"
            android:layout_below="@+id/txtCategoryTitle"
            android:layout_marginLeft="25dp"
            android:text="Delete"
            android:textColor="@color/red"
            android:textAllCaps="false"
            android:textStyle="bold"/>



    </RelativeLayout>












</androidx.cardview.widget.CardView>